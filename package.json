{
  "name": "casium-devtools",
  "version": "1.0.0",
  "description": "Casium DevTools",
  "main": "",
  "scripts": {
    "watch:web-ext": "NODE_ENV=development yarn build:web-ext --watch",
    "watch:electron": "NODE_ENV=development concurrently \"yarn watch:electron:main\" \"yarn watch:electron:renderer\" -n main,renderer",
    "watch:electron:main": "nodemon -w src/electron/main.ts -w src/electron/client.ts -x \"yarn build:electron:main && yarn start\"",
    "watch:electron:renderer": "yarn build:electron:renderer --watch",
    "build": "yarn clean && NODE_ENV=production yarn build:web-ext && NODE_ENV=production yarn build:electron",
    "build:web-ext": "webpack --config=webpack.config.web-ext.js",
    "build:electron": "concurrently \"yarn build:electron:main\" \"yarn build:electron:renderer\" -n main,renderer",
    "build:electron:main": "tsc -p tsconfig.electron.json",
    "build:electron:renderer": "webpack --config=webpack.config.electron.js",
    "test": "nyc mocha",
    "clean": "rm -rf dist",
    "deps": "yarn && cd node_modules/react-inspector && yarn && yarn build",
    "unit-test": "nyc mocha -r test/setup.js --opts test/mocha.opts",
    "watch-tests": "nodemon -e ts,tsx -x yarn unit-test",
    "start": "electron dist/electron/main.js"
  },
  "author": "",
  "license": "BSD",
  "dependencies": {
    "copy-to-clipboard": "^3.0.8",
    "cross-spawn": "^6.0.4",
    "electron": "^1.8.2",
    "electron-reload": "^1.2.2",
    "hjson": "^3.1.0",
    "json-diff": "^0.5.2",
    "ramda": "^0.25.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-fontawesome": "^1.6.1",
    "react-inspector": "nateabele/react-inspector#master",
    "title-case": "^2.1.1",
    "webextension-polyfill": "^0.2.1",
    "ws": "^4.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chrome": "^0.0.59",
    "@types/cross-spawn": "^6.0.0",
    "@types/enzyme": "^3.1.9",
    "@types/hjson": "^2.4.0",
    "@types/mocha": "^2.2.48",
    "@types/ramda": "^0.25.18",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/react-fontawesome": "^1.6.2",
    "@types/sinon": "^4.1.3",
    "@types/ws": "^4.0.1",
    "awesome-typescript-loader": "^3.4.1",
    "casium": "^1.0.11",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.4.1",
    "css-loader": "^0.28.9",
    "electron-webpack": "^1.13.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "font-awesome": "^4.7.0",
    "ignore-styles": "^5.0.1",
    "mocha": "^5.0.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.15.1",
    "nyc": "^11.4.1",
    "react-test-renderer": "15",
    "sass-loader": "^6.0.6",
    "sinon": "^4.3.0",
    "style-loader": "^0.20.1",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1",
    "uglifyjs-webpack-plugin": "^1.2.0",
    "url-loader": "^0.6.2",
    "web-ext-types": "^2.0.1",
    "webpack": "^3.5.5",
    "webpack-chrome-extension-reloader": "^0.7.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.{ts,tsx}"
    ],
    "exclude": [
      "src/**/*_test.{ts,tsx}"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ]
  }
}
